# .env configuration file
# Core Settings
HAILO_ENABLED=true
MAX_RESOLUTION=4096x4096
TARGET_PROCESSING_TIME=60
MAX_RETRIES=3
QUALITY_THRESHOLD=0.8

# Directories
TEMP_DIR=/tmp/bg_removal
OUTPUT_DIR=./outputs
CLEANUP_AGE_HOURS=24

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# FTP Server Configuration
FTP_ENABLED=true
FTP_PORT=21
FTP_USER=bgremoval
FTP_PASSWORD=secure_password_here
FTP_ROOT=/opt/background-removal/ftp

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/background-removal.log

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090